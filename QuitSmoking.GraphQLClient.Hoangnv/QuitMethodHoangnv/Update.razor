@page "/QuitMethodHoangnv/update/{id:int}"


<h3>Cập nhật phương pháp bỏ thuốc</h3>

@if (method != null)
{
    <EditForm Model="method" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="mb-3">
            <label class="form-label">Tên phương pháp *</label>
            <InputText class="form-control" @bind-Value="method.MethodName" />
            <ValidationMessage For="@(() => method.MethodName)" />
        </div>
        <div class="mb-3">
            <label class="form-label">Mô tả *</label>
            <InputTextArea class="form-control" @bind-Value="method.MethodDescription" />
            <ValidationMessage For="@(() => method.MethodDescription)" />
        </div>
        <div class="mb-3">
            <label class="form-label">Hiệu quả (1-10)</label>
            <InputNumber class="form-control" @bind-Value="method.EffectivenessRating" />
        </div>
        <div class="mb-3">
            <label class="form-label">Độ khó (1-10)</label>
            <InputNumber class="form-control" @bind-Value="method.DifficultyLevel" />
        </div>
        <div class="mb-3">
            <label class="form-label">Thời gian khuyến nghị (ngày)</label>
            <InputNumber class="form-control" @bind-Value="method.RecommendedDuration" />
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="() => _navigationManager.NavigateTo(redirectUrl, true)">Hủy</button>
    </EditForm>
}
 